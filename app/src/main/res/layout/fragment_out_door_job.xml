<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="#377838"
                android:layout_gravity="center"
                app:cardElevation="5dp"
                >

            <TextView
                android:id="@+id/tv_delevery"
                android:layout_width="match_parent"
                android:background="#377838"
                android:layout_height="wrap_content"
                android:text="Delivery"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="20sp"
                />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="#377838"
                android:layout_gravity="center"
                app:cardElevation="5dp"
                >
            <TextView
                android:id="@+id/tv_pickup"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:background="#377838"
                android:layout_height="wrap_content"
                android:text="Pick Up"
                android:textColor="#ffffff"

                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="20sp"
                />
            </android.support.v7.widget.CardView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="#377838"
                android:layout_gravity="center"
                app:cardElevation="5dp"
                >
            <TextView
                android:id="@+id/tv_ot_assit"
                android:layout_width="match_parent"
                android:background="#377838"
                android:layout_height="wrap_content"
                android:text="OT Assit"
                android:textColor="#ffffff"

                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="20sp"
                />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="#377838"
                android:layout_gravity="center"
                app:cardElevation="5dp"
                >
            <TextView
                android:id="@+id/tv_bill_submission"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:background="#377838"
                android:textColor="#ffffff"

                android:layout_height="wrap_content"
                android:text="Bill Submission"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="20sp"
                />
            </android.support.v7.widget.CardView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="#377838"
                android:layout_gravity="center"
                app:cardElevation="5dp"
                >
            <TextView
                android:id="@+id/tv_payment_collection"
                android:layout_width="match_parent"
                android:background="#377838"
                android:layout_height="wrap_content"
                android:text="Payment Collection"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#ffffff"

                android:padding="10dp"
                android:textSize="20sp"
                />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="#377838"
                android:layout_gravity="center"
                app:cardElevation="5dp"
                >
            <TextView
                android:id="@+id/tv_doctor_meet"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:background="#377838"
                android:layout_height="wrap_content"
                android:text="Doctor Meet"
                android:textColor="#ffffff"

                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="20sp"
                />
            </android.support.v7.widget.CardView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="8dp"
            android:layout_marginTop="10dp"

            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="#377838"
                android:layout_gravity="center"
                app:cardElevation="5dp"
                >
            <TextView
                android:id="@+id/tv_others"
                android:layout_width="match_parent"
                android:background="#377838"
                android:layout_height="wrap_content"
                android:text="Others"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#ffffff"

                android:padding="10dp"
                android:textSize="20sp"
                />
            </android.support.v7.widget.CardView>


        </LinearLayout>



    </LinearLayout>
</ScrollView>
