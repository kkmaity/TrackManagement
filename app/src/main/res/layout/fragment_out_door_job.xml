<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#e9e9e9"
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/tv_delevery"
                android:layout_width="match_parent"
                android:background="#e6d437"
                android:layout_height="wrap_content"
                android:text="Delivery"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/tv_pickup"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:background="#e6d437"
                android:layout_height="wrap_content"
                android:text="Pick Up"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="14sp"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#e9e9e9"
            android:padding="8dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/tv_ot_assit"
                android:layout_width="match_parent"
                android:background="#e6d437"
                android:layout_height="wrap_content"
                android:text="OT Assit"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/tv_bill_submission"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:background="#e6d437"
                android:layout_height="wrap_content"
                android:text="Bill Submission"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="14sp"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#e9e9e9"
            android:padding="8dp"
            android:layout_marginTop="20dp"

            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/tv_payment_collection"
                android:layout_width="match_parent"
                android:background="#e6d437"
                android:layout_height="wrap_content"
                android:text="Payment Collection"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/tv_doctor_meet"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:background="#e6d437"
                android:layout_height="wrap_content"
                android:text="Doctor Meet"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="14sp"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#e9e9e9"
            android:padding="8dp"
            android:layout_marginTop="20dp"

            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/tv_others"
                android:layout_width="match_parent"
                android:background="#e6d437"
                android:layout_height="wrap_content"
                android:text="Others"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="14sp"
                />


        </LinearLayout>



    </LinearLayout>
</ScrollView>
